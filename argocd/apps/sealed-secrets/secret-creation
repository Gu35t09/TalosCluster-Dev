echo -n batman2 | kubectl create secret generic mysecret2 --dry-run=client --from-file=foo=/dev/stdin -o json \
| kubeseal --cert "./${PUBLICKEY}" --scope cluster-wide | kubectl create -f -


echo -n batman | kubectl create secret \
generic mysecret --dry-run=client --from-file=foo=/dev/stdin -o json \
| kubeseal --cert mytls.crt .\
| kubectl create -f -

kubectl create secret generic magic-password \
--namespace metallb-system \
--dry-run=client \
--from-literal=location-of-rabbit=top-hat -o json \
| kubeseal --cert mytls.crt \
> apps/metallb/sealedsecret-magic-password.yaml


